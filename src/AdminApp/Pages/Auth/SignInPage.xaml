<Page x:Class="AdminApp.Pages.Auth.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AdminApp.Pages.Auth"
      mc:Ignorable="d"
      Title="SignInPage" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                <TextBlock Margin="0 0 30 0">Login</TextBlock>
                <TextBox Name="TbxLogin" Width="150"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                <TextBlock Margin="0 0 10 0">Password</TextBlock>
                <PasswordBox Name="TbxPassword" Width="150"></PasswordBox>
            </StackPanel>
            
            <Button Click="LoginBtn_OnClick" Width="100" Margin="0 0 0 15">
                Login
            </Button>
            
            <Button Click="RegisterBtn_OnClick" Width="100">Register</Button>

        </StackPanel>
    </Grid>
</Page>